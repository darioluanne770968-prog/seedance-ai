# ==================== 应用配置 ====================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=Seedance AI

# ==================== 数据库 (生产) ====================
# 推荐使用: Neon, Supabase, PlanetScale, Railway
DATABASE_URL=postgresql://user:password@host:5432/seedance?sslmode=require

# ==================== NextAuth ====================
NEXTAUTH_URL=https://your-domain.com
# 生成方式: openssl rand -base64 32
NEXTAUTH_SECRET=your-production-secret-here

# ==================== OAuth ====================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==================== Cloudflare R2 存储 ====================
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=seedance-videos
R2_PUBLIC_URL=https://your-r2-public-domain.com

# ==================== AI 服务 ====================
AI_VIDEO_PROVIDER=replicate
REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== Stripe 支付 ====================
STRIPE_SECRET_KEY=your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret-here

# Stripe 价格 ID (在 Stripe Dashboard 创建产品后获取)
STRIPE_PRICE_BASIC_MONTHLY=price_xxxxxxxx
STRIPE_PRICE_BASIC_YEARLY=price_xxxxxxxx
STRIPE_PRICE_PRO_MONTHLY=price_xxxxxxxx
STRIPE_PRICE_PRO_YEARLY=price_xxxxxxxx
STRIPE_PRICE_MAX_MONTHLY=price_xxxxxxxx
STRIPE_PRICE_MAX_YEARLY=price_xxxxxxxx

# ==================== 邮件服务 (Resend) ====================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@your-domain.com

# ==================== 错误监控 (Sentry) ====================
SENTRY_DSN=https://xxxxxxxx@sentry.io/xxxxxxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxx@sentry.io/xxxxxxxx
SENTRY_AUTH_TOKEN=sntrys_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENTRY_ORG=your-org
SENTRY_PROJECT=seedance

# ==================== 分析统计 ====================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ==================== 速率限制 (Upstash Redis) ====================
UPSTASH_REDIS_REST_URL=https://xxxxxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== 内容审核 ====================
CONTENT_MODERATION_ENABLED=true

# ==================== 功能开关 ====================
NEXT_PUBLIC_FEATURES_PAYMENT=true
NEXT_PUBLIC_FEATURES_QUOTA=true
