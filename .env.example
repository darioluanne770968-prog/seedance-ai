# ==================== 应用 ====================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Seedance Clone

# ==================== 数据库 ====================
DATABASE_URL=postgresql://user:pass@localhost:5432/seedance

# ==================== NextAuth ====================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32

# ==================== OAuth ====================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==================== Cloudflare R2 ====================
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=seedance-videos
R2_PUBLIC_URL=

# ==================== AI 服务 ====================
AI_VIDEO_PROVIDER=replicate
REPLICATE_API_TOKEN=

# ==================== Stripe 支付 (可选) ====================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_BASIC_MONTHLY=
STRIPE_PRICE_BASIC_YEARLY=
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_PRO_YEARLY=
STRIPE_PRICE_MAX_MONTHLY=
STRIPE_PRICE_MAX_YEARLY=

# ==================== 邮件服务 (可选) ====================
RESEND_API_KEY=
FROM_EMAIL=noreply@your-domain.com

# ==================== Sentry (可选) ====================
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ==================== Google Analytics (可选) ====================
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# ==================== Upstash Redis (可选，用于速率限制) ====================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ==================== Cron Jobs ====================
CRON_SECRET=your-cron-secret-here

# ==================== 功能开关 ====================
NEXT_PUBLIC_FEATURES_PAYMENT=false
NEXT_PUBLIC_FEATURES_QUOTA=true
